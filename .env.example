# VlogSphere Docker Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ======================
# Database Configuration
# ======================
DB_USER=admin
DB_PASSWORD=your_secure_mongodb_password_here
DB_NAME=vlogsphere
MONGODB_URI=mongodb://admin:your_secure_mongodb_password_here@mongodb:27017/vlogsphere?authSource=admin

# ======================
# JWT Configuration
# ======================
# Generate secure random secrets (use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_jwt_secret_64_chars_minimum
JWT_REFRESH_SECRET=your_jwt_refresh_secret_64_chars_minimum
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ======================
# Cloudinary Configuration
# ======================
# Option 1: Use CLOUDINARY_URL (recommended)
# Format: cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name

# Option 2: Use individual credentials (alternative to CLOUDINARY_URL)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ======================
# Email Configuration
# ======================
# For production, use Brevo SMTP or other email service
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_brevo_email_or_apikey
EMAIL_PASS=your_brevo_smtp_key
FROM_NAME=VlogSphere
FROM_EMAIL=noreply@vlogsphere.com

# ======================
# Redis Configuration
# ======================
# For docker-compose, use the service name
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================
# Application Settings
# ======================
NODE_ENV=production
PORT=5000
FRONTEND_URL=http://localhost:3000

# CORS Origins (Comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# AI/ML Configuration
AI_TAGGING_ENABLED=true
MIN_DESCRIPTION_LENGTH=50
